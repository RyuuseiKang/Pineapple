            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:Name="Progress_Text" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
    </Grid>
