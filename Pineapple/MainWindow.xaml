        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pineapple"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="385">
    <Grid>
        <Rectangle x:Name="Image" AllowDrop="True" Drop="Grid_Drop">
            <Rectangle.Fill>
                <ImageBrush Stretch="UniformToFill">
                    <ImageBrush.ImageSource>/FSLqrg7agAEEyT8.png</ImageBrush.ImageSource>
